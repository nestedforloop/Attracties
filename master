            Park UniversalStudioFlorida = new Park() { Name = "Universal Studio Florida", ParkAttractions = UniversalStudioFloridaList };
            Park UniversalsIslandofAdventure = new Park() { Name = "Universal' s Island of Adventure", ParkAttractions = UniversalsIslandofAdventureList };
            Park MagicKingdomPark = new Park() { Name = "Magic Kingdom Park", ParkAttractions = MagicKingdomParkList };
            Park Epcot = new Park() { Name = "Epcot", ParkAttractions = EpcotList };
            Park DisneysHollywoodStudios = new Park() { Name = "Disney's Hollywood Studio's", ParkAttractions = DisneysHollywoodStudiosList };
            Park AnimalKingdomThemePark = new Park() { Name = "Animal Kingdom Theme Park", ParkAttractions = AnimalKingdomThemeParkList };
            Park DisneysBlizzardBeachWaterPark = new Park() { Name = "Disney's Blizzard Beach Water Park", ParkAttractions = DisneysBlizzardBeachWaterParkList };
            Park DisneysTyphoonLagoonWaterPark = new Park() { Name = "Disney's Typhoon Lagoon Water Park", ParkAttractions = DisneysTyphoonLagoonWaterParkList };
            Park DisneyQuestIndoorInteractiveThemePark = new Park() { Name = "DisneyQuest Indoor Interactive Theme Park", ParkAttractions = DisneyQuestIndoorInteractiveThemeParkList };

            List<Park> Parks = new List<Park> { UniversalStudioFlorida, UniversalsIslandofAdventure, MagicKingdomPark, Epcot, DisneysHollywoodStudios, AnimalKingdomThemePark, DisneysBlizzardBeachWaterPark, DisneysTyphoonLagoonWaterPark, DisneyQuestIndoorInteractiveThemePark };

            foreach (var park in Parks)
            {
                Console.WriteLine("____________________________________________________");
                Console.WriteLine(park.Name);
                Console.WriteLine("");

                double convertLength;
                if (userLang == 1) { convertLength = UserLength / 2.54; } // NL gebruiker voerde centimeters in, die we nu pas gaan converteren naar inches
                else { convertLength = UserLength; }

                foreach (var attraction in park.ParkAttractions)
                {
                    if (convertLength < attraction.MinimumHeightNoSupervision) // formerly (UserLength < attraction.MinimumHeightNoSupervision) etc.
                    {
                        if (userLang == 1) { Console.WriteLine("Je kan hier niet op: " + attraction.Name); }
                        else { Console.WriteLine("You can't go into: " + attraction.Name); }
                    }

                    if (convertLength >= attraction.MinimumHeightYesSupervision && convertLength < attraction.MinimumHeightNoSupervision)
                    {
                        if (userLang == 1) { Console.WriteLine("-----------------> Als je met supervisie gaat, langer dan " + Convert.ToString(attraction.MinimumHeightNoSupervision*2.54) + ". Veel plezier!!"); } // convert inches to cm
                        else { Console.WriteLine("-----------------> If you're with supervision, taller than " + Convert.ToString(attraction.MinimumHeightNoSupervision) + ". Enjoy the ride!!"); } 
                    }

                    if (convertLength > attraction.MaximumHeight)
                    {
                        if (userLang == 1) { Console.WriteLine("Je zal niet passen in: " + attraction.Name); }
                        else { Console.WriteLine("You will not fit in: " + attraction.Name); } 
                    }
                }
            }

            Console.ReadLine();

        }
    }
}
